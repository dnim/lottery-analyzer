<div class="container draws">
  <h3>Draws for {{user.name}}</h3>
  <div class="row show-grid">
    Please, enter a new draw results:
    <form method="post" action="/newdraw">
      <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-9">
          <div class="row" id="add-new-draw"></div>
        </div>
        <div class="col-sm-2">
          {{!-- add draw button --}}
          <input type="submit" class="btn btn-info" value="Add draw" />
        </div>

      </div>
    </form>
  </div>

  {{!-- list of draws --}}
  <table class="table">
    <thead>
      <tr>
        <th>Results</th>
      </tr>
    </thead>
    <tbody>
      {{#each user.draws}}
        <tr class=""> 
          <td>
            DATE: {{date}}
          </td>
            {{#each balls}}
              <td>
                {{number}} ({{color}})
              </td>
            {{/each}}
          </td>
          <td>
            <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-remove"></span>
            </button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>


  <script id="ball-form" type="text/x-handlebars-template">
    <div class="col-xs-2">
      <div class="btn-group">
        <select name="ball-\{{index}}" class="btn"> 
          \{{{renderOptions}}}
        </select>                   
        <button type="button" class="btn btn-warning color-changer"></button>
        <input type="hidden" name="ball-\{{index}}-color" value="yellow">
      </div>  
    </div>  
  </script>

</div>

{{!-- rendering draws --}}
<script src="javascripts/handledraws.js"></script> 
